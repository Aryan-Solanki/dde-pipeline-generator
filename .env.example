# ==========================================
# DDE Pipeline Generator - Environment Template
# ==========================================
# Copy this file to .env and configure your settings
# NEVER commit .env files to version control

# ===================
# Backend Server (dde-server)
# ===================
NODE_ENV=development
PORT=5050
HOST=0.0.0.0

# AI Service Configuration
AI_SERVICE_URL=http://localhost:11434
AI_MODEL=qwen2.5-coder:32b-instruct-q4_K_M
AI_TIMEOUT=120000

# Python Validator
VALIDATOR_URL=http://localhost:5051
VALIDATOR_TIMEOUT=30000

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_GENERATE_MAX=10
RATE_LIMIT_REFINE_MAX=20

# CORS
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE_MB=5
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# ===================
# Frontend (dde-ui)
# ===================
VITE_API_URL=http://localhost:5050

# ===================
# Validator (dde-validator)
# ===================
FLASK_ENV=development
FLASK_PORT=5051
